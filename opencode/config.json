{
  "$schema": "https://opencode.ai/config.json",
  "small_model": "opencode/gpt-5-nano",
  "lsp": false,
  "permission": {
    "telegram_*": "ask",      
    "telegram_get_*": "allow",
    "telegram_search_*": "allow",
    "telegram_list_*": "allow"
  },
  "tools": {
    "telegram*": false
  },
  "mcp": {
    "asana": {
      "type": "remote",
      "url": "https://mcp.asana.com/sse",
      "enabled": false
    },
    "telegram": {
      "type": "local",
      "command": [
        "uv",
        "--directory",
        "/home/user/code/clone/telegram-mcp",
        "run",
        "main.py"
      ],
      "enabled": false
    }
  }
}
